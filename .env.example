# Example environment variables file
# Copy this file to .env and update with your actual values

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure DevOps Configuration
AZURE_DEVOPS_ORGANIZATION=https://dev.azure.com/your-organization
AZURE_DEVOPS_PAT=your-personal-access-token

# Microsoft Entra ID Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
# For container deployments, set to your frontend container app FQDN:
# AZURE_REDIRECT_URI=https://your-frontend-app.region.azurecontainerapps.io/auth/callback
AZURE_REDIRECT_URI=http://localhost:3000/auth/callback

# Frontend Azure Configuration (required for frontend build and runtime)
NEXT_PUBLIC_AZURE_TENANT_ID=your-tenant-id-here
NEXT_PUBLIC_AZURE_CLIENT_ID=your-client-id-here
NEXT_PUBLIC_AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
# For container deployments, set to your frontend container app FQDN:
# NEXT_PUBLIC_AZURE_REDIRECT_URI=https://your-frontend-app.region.azurecontainerapps.io/auth/callback
NEXT_PUBLIC_AZURE_REDIRECT_URI=http://localhost:3000/auth/callback
NEXT_PUBLIC_AZURE_SCOPES=openid,profile,User.Read

# Authentication Scopes
AZURE_SCOPES=openid profile User.Read https://app.vssps.visualstudio.com/user_impersonation

# Application URLs
# For container deployments, set these to your container app FQDNs:
# FRONTEND_URL=https://your-frontend-app.region.azurecontainerapps.io
# BACKEND_URL=https://your-backend-app.region.azurecontainerapps.io
# NEXT_PUBLIC_FRONTEND_URL=https://your-frontend-app.region.azurecontainerapps.io
# NEXT_PUBLIC_BACKEND_URL=https://your-backend-app.region.azurecontainerapps.io
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/azure_devops_agent

# Redis Configuration (if applicable)
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-32-chars-long-minimum
SECRET_KEY=your-secret-key-for-session-management
SESSION_TIMEOUT=3600
REQUIRE_HTTPS=false

# Monitoring Configuration
APPLICATIONINSIGHTS_CONNECTION_STRING=your-application-insights-connection-string
ENABLE_TELEMETRY=true

# Feature Flags
ENABLE_CHAT_HISTORY=true
ENABLE_ADVANCED_PLANNING=false
ENABLE_WEBHOOK_SUPPORT=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000