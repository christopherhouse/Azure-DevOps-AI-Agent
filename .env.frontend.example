# Frontend Environment Variables Example
# Copy this file to .env.frontend and update with your actual values

# =============================================================================
# MICROSOFT ENTRA ID CONFIGURATION (Required for authentication)
# =============================================================================
# All NEXT_PUBLIC_* variables are exposed to the browser, so never put secrets here

# Azure tenant ID from your Entra ID
NEXT_PUBLIC_AZURE_TENANT_ID=your-tenant-id-here

# Frontend application (client) ID from Entra ID app registration
NEXT_PUBLIC_AZURE_CLIENT_ID=your-client-id-here

# Backend API application (client) ID - used for acquiring backend tokens
NEXT_PUBLIC_BACKEND_CLIENT_ID=your-backend-client-id-here

# Azure AD authority URL (automatically constructed from tenant ID)
NEXT_PUBLIC_AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# OAuth redirect URI for authentication callback
# For Docker Compose local development, this should be http://localhost:3000/auth/callback
NEXT_PUBLIC_AZURE_REDIRECT_URI=http://localhost:3000/auth/callback

# OAuth scopes requested during authentication (comma-separated)
# Include Azure DevOps scope for backend API access
NEXT_PUBLIC_AZURE_SCOPES=openid,profile,User.Read

# =============================================================================
# APPLICATION URLS
# =============================================================================
# Backend API URL - use http://localhost:8000 for accessing from host browser
# The frontend container uses 'backend' hostname internally, but browser needs localhost
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Frontend URL - where the frontend is accessible
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment name (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug mode (true/false)
NEXT_PUBLIC_DEBUG=true

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
# Application Insights connection string for client-side telemetry
# This should be the full connection string from your Azure Application Insights resource
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Enable telemetry collection (true/false)
ENABLE_TELEMETRY=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Session timeout in seconds (default: 3600 = 1 hour)
NEXT_PUBLIC_SESSION_TIMEOUT=3600

# Require HTTPS for authentication (set to false for local development)
NEXT_PUBLIC_REQUIRE_HTTPS=false

# =============================================================================
# NOTES
# =============================================================================
# 1. All NEXT_PUBLIC_* variables are exposed to the browser
# 2. Never put secrets or sensitive data in NEXT_PUBLIC_* variables
# 3. Frontend will be accessible at http://localhost:3000
# 4. Health check endpoint: http://localhost:3000/api/health
# 5. For authentication to work, ensure:
#    - Entra ID app registration has redirect URI: http://localhost:3000/auth/callback
#    - Backend API is registered and exposed as an API in Entra ID
#    - Frontend app has API permissions to access the backend API
# 6. Backend URL is set to localhost:8000 (not the Docker internal hostname)
#    because the browser makes requests from the host machine
